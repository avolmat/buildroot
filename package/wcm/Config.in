config BR2_PACKAGE_WCM
	bool "wcm"
	depends on !BR2_STATIC_LIBS
	depends on BR2_TOOLCHAIN_HAS_THREADS
	depends on BR2_PACKAGE_HAS_UDEV
	depends on BR2_USE_WCHAR
	depends on BR2_USE_MMU
	depends on BR2_INSTALL_LIBSTDCPP
	depends on BR2_TOOLCHAIN_GCC_AT_LEAST_4_9
	depends on BR2_PACKAGE_WAYFIRE
	select BR2_PACKAGE_LIBGTK3
	select BR2_PACKAGE_GTKMM3
	select BR2_PACKAGE_GOBJECT_INTROSPECTION
	select BR2_PACKAGE_PYTHON3
	select BR2_PACKAGE_LIBRSVG
	help
	  wcm Wayfire Config Manager is a Gtk3 application to configure wayfire.
	  It writes the config file that wayfire reads to update option values.

	  https://github.com/WayfireWM/wcm

comment "wcm needs a toolchain w/ wchar, threads, C++, dynamic library, gcc >= 4.9"
	depends on BR2_USE_MMU
	depends on BR2_TOOLCHAIN_HAS_SYNC_4
	depends on !BR2_USE_WCHAR || \
		!BR2_TOOLCHAIN_HAS_THREADS || \
		!BR2_TOOLCHAIN_GCC_AT_LEAST_4_9 || \
		!BR2_INSTALL_LIBSTDCPP || \
		BR2_STATIC_LIBS
